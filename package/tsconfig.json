{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020", // or whichever version you prefer
    "module": "commonjs",
    "lib": [
      "ES2020",
      "dom"
    ],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "./node_modules/lighthouse/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}