{
  "compilerOptions": {
    "moduleResolution": "nodeNext",
    "target": "ES6",
    "module": "ES6",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "./node_modules/lighthouse/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}